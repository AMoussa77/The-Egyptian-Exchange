{
  "name": "egyptian-exchange-stocks",
  "version": "0.6.7",
  "description": "Desktop application for Egyptian Exchange stocks with real-time data from web scraping",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder --publish=never",
    "dist": "electron-builder --publish=never",
    "publish": "electron-builder --publish=always",
    "release": "node build-release.js"
  },
  "keywords": [
    "stocks",
    "egyptian-exchange",
    "desktop",
    "electron"
  ],
  "author": "Your Name",
  "license": "MIT",
  "devDependencies": {
    "electron": "^27.0.0",
    "electron-builder": "^24.6.4"
  },
  "dependencies": {
    "axios": "^1.12.2",
    "cheerio": "^1.1.2"
  },
  "build": {
    "appId": "com.egyptianexchange.stocks",
    "productName": "Egyptian Exchange Stocks",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      "!node_modules/**/*",
      "!dist/**",
      "!**/*.{iml,o,hprof,orig,pyc,pyo,rbc,swp,csproj,sln,xproj}",
      "!.editorconfig",
      "!**/._*",
      "!**/{.DS_Store,.git,.hg,.svn,CVS,RCS,SCCS,.gitignore,.gitattributes}",
      "!**/{__pycache__,thumbs.db,.flowconfig,.idea,.vs,.nyc_output}",
      "!**/{appveyor.yml,.travis.yml,circle.yml}",
      "!**/{npm-debug.log,yarn.lock,.yarn-integrity,.yarn-metadata.json}",
      "!Stocks.xlsx",
      "node_modules/axios/**/*"
    ],
    "asarUnpack": [
      "node_modules/axios/**/*"
    ],
    "asar": true,
    "artifactName": "${productName}-${version}-${os}-${arch}.${ext}",
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "ia32"
          ]
        }
      ],
      "publisherName": "Egyptian Exchange Stocks",
      "icon": "assets/icon.ico"
    },
    "nsis": {
      "oneClick": true,
      "perMachine": false,
      "allowElevation": true,
      "allowToChangeInstallationDirectory": false,
      "deleteAppDataOnUninstall": false,
      "artifactName": "${productName}-${version}-${os}-${arch}.${ext}"
    },
    "mac": {
      "target": [
        "dmg"
      ],
      "category": "public.app-category.finance",
      "icon": "assets/icon.icns"
    },
    "linux": {
      "target": [
        "AppImage"
      ],
      "category": "Finance",
      "icon": "assets/icon.png"
    },
    "extraResources": [
      {
        "from": "node_modules/axios",
        "to": "axios"
      }
    ]
  }
}
